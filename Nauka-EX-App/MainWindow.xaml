                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Февраль">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Март">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Апрель">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Май">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Июнь">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Июль">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Август">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Сентябрь">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Октябрь">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Ноябрь">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
            </TabItem>
            <TabItem Header="Декабрь">
                <Grid Background="#FFE5E5E5" HorizontalAlignment="Right" Width="602"/>
